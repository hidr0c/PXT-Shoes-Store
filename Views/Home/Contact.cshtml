@{
    ViewBag.Title = "Liên hệ";
}
<style>
    body {
        font-family: Arial, sans-serif;
        line-height: 1.6;
        margin: 20px;
    }

    .title {
        text-align: center;
        font-size: 28px;
        font-weight: bold;
        margin-bottom: 10px;
        font-family: Arial, sans-serif;
        color: #ff7f50;
    }

    .contact-info, .email-section {
        font-family: 'Georgia', serif;
        color: #333; /* Màu xám đậm cho dễ đọc */
        font-size: 24px; /* Kích thước chữ lớn hơn */
        margin-bottom: 20px;
    }

    .phone {
        color: #006600; /* Màu xanh lá đậm */
        font-size: 24px; /* Kích thước chữ lớn hơn */
        font-weight: bold;
    }

    .email a {
        font-family: 'Courier New', monospace;
        color: #800080; /* Màu tím */
        font-size: 24px; /* Kích thước chữ lớn hơn */
        text-decoration: none; /* Bỏ gạch chân mặc định của link */
    }

        .email a:hover {
            text-decoration: underline; /* Thêm gạch chân khi hover */
        }
</style>

<h2 class="title">@ViewBag.Title</h2>

<address class="contact-info">
    <strong>Địa chỉ:</strong> Trung tâm 123, đường Nguyễn Văn Linh<br />
    Liên Bảo, Vĩnh Yên, Vĩnh Phúc<br />
    <abbr title="Phone" class="phone">Phone:</abbr>
    <span class="phone">0868.370.213</span>
</address>

<address class="email-section">
    <strong>Support:</strong> <a href="mailto:Support@example.com" class="email">Support@example.com</a><br />
    <strong>Marketing:</strong> <a href="mailto:Marketing@example.com" class="email">Marketing@example.com</a>
</address>

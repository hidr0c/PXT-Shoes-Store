    }

    /* Coupon and Summary container */
    .coupon-and-summary-container {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-top: 20px;
        padding: 0 15px;
    }

    /* Coupon section styling */
    .coupon-section {
        flex: 1;
        text-align: left;
    }

    .coupon-form {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .coupon-input-group {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .coupon-input {
        width: 200px;
        padding: 8px;
        font-size: 0.9rem;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #f9f9f9;
        transition: border-color 0.3s ease;
    }

    .coupon-input:focus {
        border-color: #6B48FF;
        outline: none;
    }

    .btn-apply-coupon {
        padding: 8px 16px;
        font-size: 0.9rem;
        font-weight: 500;
        background-color: #6B48FF; /* Primary color */
        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.1s ease;
    }

    .btn-apply-coupon:hover {
        background-color: #5a3de6;
        transform: translateY(-1px);
    }

    .coupon-warning {
        color: #e74c3c;
        font-size: 0.9rem;
        margin-top: 5px;
    }

    /* Summary section styling */
    .summary-section {
        flex: 1;
        text-align: right;
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 8px;
    }

    .summary-item {
        display: flex;
        justify-content: flex-end;
        gap: 20px;
        margin-bottom: 10px;
        font-size: 1.1rem;
        color: #333;
    }

    .summary-item span:first-child {
        font-weight: 500;
    }

    .summary-item span:last-child {
        min-width: 150px;
        text-align: right;
    }

    .discount-amount {
        color: #28a745; /* Green for discount */
    }

    .final-total {
        margin-top: 15px;
        padding-top: 15px;
        border-top: 1px solid #e0e0e0;
        font-size: 1.3rem;
        color: #6B48FF; /* Primary color */
    }

    /* Action buttons (Update, Delete) */
    .btn {
        padding: 6px 12px;
        font-size: 0.9rem;
        font-weight: 500;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.1s ease;
        margin: 0 5px;
    }

    .btn-update {
        background-color: #f39c12;
        color: #fff;
    }

    .btn-update:hover {
        background-color: #e67e22;
        transform: translateY(-1px);
    }

    .btn-delete {
        background-color: #e74c3c;
        color: #fff;
        text-decoration: none;
    }

    .btn-delete:hover {
        background-color: #c0392b;
        transform: translateY(-1px);
    }

    /* Cart actions (Checkout buttons) */
    .cart-actions {
        display: flex;
        justify-content: flex-end;
        align-items: center;
        margin-top: 30px;
        padding: 0 15px;
    }

    .checkout-buttons {
        display: flex;
        gap: 10px;
    }

    .checkout-form {
        display: inline-block;
    }

    .btn-checkout {
        padding: 10px 20px;
        font-size: 1rem;
        font-weight: 500;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.1s ease;
        text-transform: uppercase;
    }

    .btn-cod {
        background-color: #e74c3c;
        color: #fff;
    }

    .btn-cod:hover {
        background-color: #c0392b;
        transform: translateY(-1px);
    }

    .btn-vnpay {
        background-color: #6B48FF; /* Primary color */
        color: #fff;
    }

    .btn-vnpay:hover {
        background-color: #5a3de6;
        transform: translateY(-1px);
    }

    .btn-paypal {
        background-color: #f1c40f;
        color: #333;
    }

    .btn-paypal:hover {
        background-color: #d4ac0d;
        transform: translateY(-1px);
    }

    /* Hover effect for table rows */
    .cart-item:hover {
        background-color: #f5f5f5;
        transition: background-color 0.3s ease;
    }

    /* Empty cart message */
    .empty-cart-message {
        text-align: center;
        font-size: 1.2rem;
        color: #666;
        padding: 20px;
    }

    /* Responsive design */


        .cart-table th, .cart-table td {
            padding: 10px;
            font-size: 0.9rem;
        }

        .cart-image {
            width: 80px;
            height: 80px;
        }

        .cart-title {
            font-size: 1.5rem;
        }

        .size-select, .quantity-input {
            width: 80px;
        }

        .quantity-input {
            width: 60px;
        }

        .coupon-and-summary-container {
            flex-direction: column;
            gap: 20px;
        }

        .coupon-section, .summary-section {
            text-align: center;
            width: 100%;
        }

        .coupon-input {
            width: 100%;
            max-width: 200px;
        }

        .coupon-form {
            flex-direction: column;
            align-items: center;
        }

        .coupon-input-group {
            width: 100%;
            justify-content: center;
        }

        .btn-apply-coupon {
            width: 100%;
            max-width: 200px;
            margin-top: 10px;
        }

        .summary-item {
            justify-content: center;
            font-size: 1rem;
        }

        .summary-item span:last-child {
            text-align: center;
        }

        .final-total {
            font-size: 1.2rem;
        }

        .checkout-buttons {
            flex-direction: column;
            gap: 10px;
        }

        .btn-checkout {
            width: 100%;
            padding: 12px;
        }
    }
</style>